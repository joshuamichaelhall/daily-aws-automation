# AWS Configuration
# Use AWS CLI profiles instead of hardcoding credentials
AWS_PROFILE=iamadmin-general
AWS_DEFAULT_REGION=us-east-1

# Script Configuration
OUTPUT_FORMAT=table  # Options: table, json, csv
LOG_LEVEL=INFO      # Options: DEBUG, INFO, WARNING, ERROR

# Cost Thresholds (for cost-related scripts)
COST_ALERT_THRESHOLD=1000
BUDGET_WARNING_PERCENTAGE=80

# Notification Settings (optional)
SLACK_WEBHOOK_URL=
EMAIL_ALERTS_TO=

# Script Behavior
DRY_RUN=false       # Set to true to preview actions without making changes
VERBOSE=false       # Set to true for detailed output